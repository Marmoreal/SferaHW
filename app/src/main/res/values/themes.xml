<resources>
    <!-- Base application theme. -->
    <style name="Theme.SferaHW" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
    </style>

    <style name="Theme.SferaHW.CornerSize50Percent">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.SferaHW.CornerSize4dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Theme.SferaHW.OutlinedButtonSmall" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/on_surface</item>
        <item name="strokeColor">@color/purple_200</item>
        <item name="backgroundTint">@color/elevation_overlay</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <style name="Theme.SferaHW.OutlinedButtonLarge" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/on_surface</item>
        <item name="strokeColor">@color/purple_200</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="backgroundTint">@color/elevation_overlay</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <style name="Theme.SferaHW.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/purple_200</item>
        <item name="backgroundTint">@color/surface</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center|end</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="fontFamily">@font/inter</item>
        <item name="textAllCaps">false</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

    <style name="Theme.SferaHW.TextInputLayoutFilledBox" parent="ThemeOverlay.Material3.AutoCompleteTextView.FilledBox">
        <item name="boxBackgroundColor">@color/surface</item>
    </style>

    <style name="Theme.SferaHW.TextInputEditText">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Theme.SferaHW.Switch">
        <item name="colorControlActivated">@color/switch_thumb_on</item>
        <item name="colorSwitchThumbNormal">@color/switch_thumb_off</item>
        <item name="trackColorInactive">@color/switch_track_off</item>
        <item name="trackColorActive">@color/switch_track_on</item>
    </style>

    <style name="Theme.SferaHW.Headline5_24" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Theme.SferaHW.Headline6_18" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="Theme.SferaHW.Body2_14" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Theme.SferaHW.Subtitle1_16" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Theme.SferaHW.Subtitle2_14" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="fontFamily">@font/inter</item>
    </style>
</resources>